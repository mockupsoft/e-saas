    <script>
        // Global variables
        let activityChart = null;
        
        // Utility functions
        function formatCurrency(amount) {
            return new Intl.NumberFormat('tr-TR', {
                style: 'currency',
                currency: 'TRY'
            }).format(amount);
        }
        
        function formatNumber(num) {
            return new Intl.NumberFormat('tr-TR').format(num);
        }
        
        function formatUptime(seconds) {
            const days = Math.floor(seconds / 86400);
            const hours = Math.floor((seconds % 86400) / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            
            if (days > 0) {
                return `${days}g ${hours}s`;
            } else if (hours > 0) {
                return `${hours}s ${minutes}dk`;
            } else {
                return `${minutes}dk`;
            }
        }
        
        // Load system summary statistics
        async function loadSystemSummary() {
            try {
                const response = await fetch('/admin/analytics/api/summary');
                const result = await response.json();
                
                if (result.success) {
                    const stats = result.data;
                    
                    document.getElementById('totalTenants').textContent = formatNumber(stats.totalTenants);
                    document.getElementById('activeTenants').textContent = formatNumber(stats.activeTenants);
                    document.getElementById('totalOrders').textContent = formatNumber(stats.totalOrders);
                    document.getElementById('totalRevenue').textContent = formatCurrency(stats.totalRevenue);
                    document.getElementById('avgOrderValue').textContent = formatCurrency(stats.avgOrderValue);
                    document.getElementById('systemUptime').textContent = formatUptime(stats.systemUptime);
                }
            } catch (error) {
                console.error('Sistem √∂zeti y√ºkleme hatasƒ±:', error);
                document.querySelectorAll('.admin-stat-value').forEach(el => {
                    el.textContent = 'Hata';
                });
            }
        }
        
        // Load activity trend chart
        async function loadActivityChart() {
            try {
                const response = await fetch('/admin/analytics/api/activity-trend');
                const result = await response.json();
                
                if (result.success) {
                    const activityData = result.data;
                    const ctx = document.getElementById('activityChart').getContext('2d');
                    
                    if (activityChart) {
                        activityChart.destroy();
                    }
                    
                    activityChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: activityData.map(d => {
                                const date = new Date(d.date);
                                return date.toLocaleDateString('tr-TR', { 
                                    day: '2-digit', 
                                    month: '2-digit' 
                                });
                            }),
                            datasets: [{
                                label: 'G√ºnl√ºk Sipari≈ü',
                                data: activityData.map(d => d.total_orders),
                                borderColor: '#667eea',
                                backgroundColor: 'rgba(102, 126, 234, 0.1)',
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                yAxisID: 'y'
                            }, {
                                label: 'G√ºnl√ºk Gelir (TL)',
                                data: activityData.map(d => d.total_revenue),
                                borderColor: '#4facfe',
                                backgroundColor: 'rgba(79, 172, 254, 0.1)',
                                borderWidth: 3,
                                fill: true,
                                tension: 0.4,
                                yAxisID: 'y1'
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            interaction: {
                                mode: 'index',
                                intersect: false,
                            },
                            scales: {
                                y: {
                                    type: 'linear',
                                    display: true,
                                    position: 'left',
                                    title: {
                                        display: true,
                                        text: 'Sipari≈ü Sayƒ±sƒ±'
                                    }
                                },
                                y1: {
                                    type: 'linear',
                                    display: true,
                                    position: 'right',
                                    title: {
                                        display: true,
                                        text: 'Gelir (TL)'
                                    },
                                    grid: {
                                        drawOnChartArea: false,
                                    },
                                }
                            },
                            plugins: {
                                legend: {
                                    display: true,
                                    position: 'top'
                                }
                            }
                        }
                    });
                }
            } catch (error) {
                console.error('Aktivite grafiƒüi y√ºkleme hatasƒ±:', error);
            }
        }
        
        // Load tenant performance
        async function loadTenantPerformance() {
            try {
                const response = await fetch('/admin/analytics/api/tenant-performance');
                const result = await response.json();
                
                if (result.success) {
                    const tenants = result.data;
                    const container = document.getElementById('tenantPerformanceContainer');
                    
                    if (tenants.length === 0) {
                        container.innerHTML = '<div class="loading">Hen√ºz performans verisi yok</div>';
                        return;
                    }
                    
                    const tableHTML = `
                        <table class="tenant-performance-table">
                            <thead>
                                <tr>
                                    <th>Tenant</th>
                                    <th>Sipari≈ü</th>
                                    <th>Gelir</th>
                                    <th>M√º≈üteri</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${tenants.map(tenant => `
                                    <tr>
                                        <td>
                                            <div class="tenant-name">${tenant.tenant_name}</div>
                                            <div class="tenant-domain">${tenant.tenant_domain}</div>
                                        </td>
                                        <td>${formatNumber(tenant.total_orders)}</td>
                                        <td>${formatCurrency(tenant.total_revenue)}</td>
                                        <td>${formatNumber(tenant.unique_customers)}</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    `;
                    
                    container.innerHTML = tableHTML;
                }
            } catch (error) {
                console.error('Tenant performans y√ºkleme hatasƒ±:', error);
                document.getElementById('tenantPerformanceContainer').innerHTML = 
                    '<div class="loading">Veri y√ºklenemedi</div>';
            }
        }
        
        // Load system health
        async function loadSystemHealth() {
            try {
                const response = await fetch('/admin/analytics/api/system-health');
                const result = await response.json();
                
                if (result.success) {
                    const health = result.data;
                    const container = document.getElementById('systemHealthContainer');
                    
                    const memoryUsage = (health.memory_usage.heapUsed / 1024 / 1024).toFixed(1);
                    const memoryTotal = (health.memory_usage.heapTotal / 1024 / 1024).toFixed(1);
                    
                    const healthHTML = `
                        <div class="health-item">
                            <span class="health-label">Database Durumu</span>
                            <span class="health-value ${health.database_status === 'healthy' ? 'health-good' : 'health-danger'}">
                                ${health.database_status === 'healthy' ? '‚úÖ Saƒülƒ±klƒ±' : '‚ùå Hata'}
                            </span>
                        </div>
                        <div class="health-item">
                            <span class="health-label">Aktif Tenant</span>
                            <span class="health-value health-good">${health.active_tenants} / ${health.total_tenants}</span>
                        </div>
                        <div class="health-item">
                            <span class="health-label">Memory Kullanƒ±mƒ±</span>
                            <span class="health-value ${memoryUsage > 500 ? 'health-warning' : 'health-good'}">${memoryUsage} MB / ${memoryTotal} MB</span>
                        </div>
                        <div class="health-item">
                            <span class="health-label">Sistem Uptime</span>
                            <span class="health-value health-good">${formatUptime(health.system_uptime)}</span>
                        </div>
                        <div class="health-item">
                            <span class="health-label">Server Zamanƒ±</span>
                            <span class="health-value health-good">${new Date(health.server_time).toLocaleString('tr-TR')}</span>
                        </div>
                    `;
                    
                    container.innerHTML = healthHTML;
                }
            } catch (error) {
                console.error('Sistem saƒülƒ±ƒüƒ± y√ºkleme hatasƒ±:', error);
                document.getElementById('systemHealthContainer').innerHTML = 
                    '<div class="loading">Veri y√ºklenemedi</div>';
            }
        }
        
        // Refresh all data
        function refreshAllData() {
            loadSystemSummary();
            loadActivityChart();
            loadTenantPerformance();
            loadSystemHealth();
        }
        
        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            refreshAllData();
            
            // Auto refresh every 5 minutes
            setInterval(refreshAllData, 300000);
        });
    </script>
