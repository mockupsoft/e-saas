                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Build iÅŸlemi baÅŸarÄ±yla baÅŸlatÄ±ldÄ±!', 'success');
                        
                        // Simulate build completion after 3 seconds
                        setTimeout(() => {
                            statusEl.className = 'status-indicator ready';
                            statusEl.innerHTML = 'âœ… HazÄ±r';
                            showNotification('Build tamamlandÄ±!', 'success');
                        }, 3000);
                    } else {
                        statusEl.className = 'status-indicator error';
                        statusEl.innerHTML = 'âŒ Hata';
                        showNotification('Build iÅŸlemi baÅŸlatÄ±lamadÄ±: ' + data.message, 'error');
                    }
