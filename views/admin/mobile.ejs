    <script>
        // Mobile app management functions
        function buildFlutterApp() {
            if (confirm('Flutter uygulamasÄ±nÄ± build etmek istiyor musunuz? Bu iÅŸlem birkaÃ§ dakika sÃ¼rebilir.')) {
                const statusEl = document.getElementById('buildStatus');
                statusEl.className = 'status-indicator building';
                statusEl.innerHTML = 'â³ Build ediliyor...';
                
                showNotification('Build iÅŸlemi baÅŸlatÄ±ldÄ±...', 'info');
                
                fetch('/admin/api/mobile/build', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
