        function generateQRCodes() {
            showNotification('QR kodlarÄ± oluÅŸturuluyor...', 'info');
            
            fetch('/admin/api/mobile/qr-codes', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showNotification('QR kodlarÄ± baÅŸarÄ±yla oluÅŸturuldu!', 'success');
                } else {
                    showNotification('QR kod oluÅŸturmada hata: ' + data.message, 'error');
                }
            })
            .catch(error => {
                console.error('QR generation error:', error);
                showNotification('QR kod oluÅŸturmada hata oluÅŸtu.', 'error');
            });
        }

        function generateTenantQR(tenantDomain, tenantName) {
            const url = `https://${tenantDomain}.saas.apollo12.co`;
            
            // Generate QR code
            document.getElementById('qrCodeContainer').innerHTML = '<div style="margin-bottom: 1rem; font-weight: 600;">' + tenantName + '</div>';
            
            QRCode.toCanvas(document.getElementById('qrCodeContainer'), url, {
                width: 256,
                height: 256,
                margin: 2
            }, function (error) {
                if (error) {
                    console.error(error);
                    showNotification('QR kod oluÅŸturulamadÄ±.', 'error');
                } else {
                    document.getElementById('qrModal').style.display = 'flex';
                    window.currentQRData = { domain: tenantDomain, name: tenantName, url: url };
                }
            });
        }

        function closeQRModal() {
            document.getElementById('qrModal').style.display = 'none';
        }

        function downloadQRImage() {
            const canvas = document.querySelector('#qrCodeContainer canvas');
            if (canvas) {
                const link = document.createElement('a');
                link.download = `${window.currentQRData.domain}_qr.png`;
                link.href = canvas.toDataURL();
                link.click();
            }
        }

        function openMobileApp(tenantDomain) {
            const url = `https://${tenantDomain}.saas.apollo12.co`;
            // Try to open in mobile app if available, otherwise open in browser
            window.open(url, '_blank');
        }

        function downloadTenantAPK(tenantDomain) {
            showNotification('APK indirme baÅŸlatÄ±lÄ±yor...', 'info');
            window.open(`/admin/api/mobile/download-apk/${tenantDomain}`, '_blank');
        }

        function uploadToFirebase() {
            if (confirm('APK dosyasÄ±nÄ± Firebase App Distribution\'a yÃ¼klemek istiyor musunuz?')) {
                showNotification('Firebase yÃ¼kleme baÅŸlatÄ±ldÄ±...', 'info');
                
                fetch('/admin/api/mobile/firebase-upload', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification('Firebase yÃ¼kleme baÅŸarÄ±yla tamamlandÄ±!', 'success');
                    } else {
                        showNotification('Firebase yÃ¼kleme hatasÄ±: ' + data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Firebase upload error:', error);
                    showNotification('Firebase yÃ¼kleme hatasÄ± oluÅŸtu.', 'error');
                });
            }
        }

        function showBuildLogs() {
